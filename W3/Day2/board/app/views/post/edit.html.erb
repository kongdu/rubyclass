<h2>게시글 수정하는 페이지</h2>
<!-- <form action="/post/update/<%=@post.id %>"> -->
<form action="/post/update/<%=@post.id %>" method ="post" >
  <div class="form-group">
    <label>작성자</label>
      <input value="<%= @post.username%>" name="username" type="text" class="form-control" placeholder="이름 입력해야지~"/>
  </div>
  <div class="form-group">
    <label>제목</label>
    <input vlaue="<%=@post.title%>" name="title" type="text" class="form-control" placeholder="제목을 쓰셔야죠">
  </div>
  <div class ="form-group">
    <label>내용</label>
    <textarea name="content" class="form-control" rows="3"><%=@post.content%> </textarea>
  </div>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>"/>
  <button type="submit" class="btn btn-primary"> 수!정!완!료!</button>
</form>
