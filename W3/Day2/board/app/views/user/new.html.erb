<h2 class ="font-weight-bold"> Sign up</h2>
<form action="/user/create" method="post">
  <div class="form-group">
    <br />
  <label for="exampleFormControlInput1">Name</label>
  <input type="text" class="form-control" name="name"/>
</div>
<div class="form-group">
  <label for="exampleFormControlInput1">Email address</label>
  <input type="email" class="form-control" id="exampleFormControlInput1" name="account" placeholder="name@example.com">
</div>
<div class="form-group">
   <label for="inputPassword" class="col-form-label">Password</label>
   <div>
     <input type="password" class="form-control" name="pwd" id="inputPassword">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>"/>
   </div>
 </div>
  <button type="submit" class="btn btn-primary">OK</button>
</form>
